{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <h1>Artist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>

            <tr>
                <th>Style</th>
                <td>{{ style.name }}</td>
            </tr>

            <tr>
                <th>Picture</th>
                <td><img src="{{ artist.picture }}"</td>
            </tr>
             <tr>
                <th>Albums</th>
                {% for album in albums %}
                <td>{{ album.name }}</td>
                <img src="{{ asset('uploads/' ~ album.cover) }}​​" class="card-img-top" >
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('artist_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('artist_edit', {'id': artist.id}) }}">edit</a>
    {{ include('artist/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
